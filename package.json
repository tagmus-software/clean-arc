{
    "name": "clean-arc",
    "version": "1.0.0",
    "description": "A simple clean architecture framework, letting possible to code in the simplest way and letting all the code explicit",
    "main": "src/main.ts",
    "scripts": {
        "start:dev": "tsx watch src/main.ts",
        "build": "tsc --project tsconfig.json",
        "start": "tsx dist/main.js",
        "lint": "eslint . --ext .ts",
        "typeorm:migration:create": "typeorm-ts-node-esm migration:create ",
        "typeorm:migration:up": "typeorm-ts-node-esm migration:run -d ./src/infra/database/mysql/ormconfig.ts",
        "typeorm:migration:down": "typeorm-ts-node-commonjs migration:revert -d ./src/infra/database/mysql/ormconfig.ts",
        "typeorm:seed": "tsx src/infra/database/mysql/seeders/index.ts"
    },
    "keywords": [
        "clean-arc",
        "clean-arch",
        "clean architecture",
        "clean architecture framework",
        "simple node framework",
        "clean architecture express"
    ],
    "author": "Kevin Ferreira  <Linkedin> (https://www.linkedin.com/in/kevin-ferreira-048811165/)",
    "repository": {
        "type": "git",
        "url": "https://github.com/tagmus-software/clean-arc"
    },
    "license": "ISC",
    "dependencies": {
        "amqplib": "^0.10.3",
        "dotenv": "^16.0.3",
        "express": "^4.17.1",
        "mysql2": "^3.1.2",
        "pino": "^8.11.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.12"
    },
    "devDependencies": {
        "@types/amqp": "^0.2.5",
        "@types/amqplib": "^0.10.1",
        "@types/express": "^4.17.13",
        "@types/node": "^16.11.6",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "jest": "^29.5.0",
        "pino-pretty": "^10.0.0",
        "ts-node": "^10.9.1",
        "tsx": "^3.12.3",
        "typescript": "^4.4.4"
    }
}
