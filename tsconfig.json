{
    "compilerOptions": {
        "target": "ES2018",
        "lib": ["es5", "es6", "dom"],
        "resolveJsonModule": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "outDir": "dist/",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@clean-arc/*": ["packages/*"]
        },
        "strictPropertyInitialization": false
    },
    "exclude": [
        "node_modules",
        "./dist",
        "./**/__mocks__",
        "./**/tests",
        "./**/test"
    ],
    "include": ["packages/**/*.ts", "packages/**/*.json"]
}
