{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["es5", "es6", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist/",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "@*": ["src/*"]
    },
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules", "./dist"],
  "include": ["src/**/*.ts"]
}
